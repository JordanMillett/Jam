@inject ConfigService Config

<div class="fullscreen">
    <div class="row popup">
        <div class="col-12 col-md-4 offset-md-4" style="background-color: var(--jam-background);">
            <div class="row">
                <div class="col-12" style="background-color: var(--jam-primary)"><h2 style="color: var(--jam-background)">Login</h2></div>
                <div class="col-12 text-center">
                    <form @onsubmit="() => Config.TryLogin()">
                        <h4 class="mt-3">Username</h4>
                        <input type="text" @bind="Config.Login.Username" />
                        <h4 class="mt-3">Password</h4>
                        <input type="password" @bind="Config.Login.Password" />
                    </form>
                </div>
                <div class="col-12 text-end my-3">
                    <Button @onclick="() => Config.TryLogin()">Login</Button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .popup
    {
        padding-top: 10rem;
    }
    
    .fullscreen
    {
    background-color: black;
    position: fixed;
    width:100%;
    height: 100%;
    }
</style>